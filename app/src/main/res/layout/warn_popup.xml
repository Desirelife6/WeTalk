<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_circle_shape">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/enter_word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="你将添加好友"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        app:layout_constraintBottom_toTopOf="@+id/enter_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#888888" />



    <LinearLayout
        android:id="@+id/enter_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/enter_word2">

        <Button
            android:id="@+id/enter_cancel2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#5C5C5C"
            android:text="取消"
            android:textSize="16sp" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#888888" />

        <Button
            android:textColor="@color/wetalk_dgreen"
            android:id="@+id/enter_comfirm2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="确定"
            android:textSize="16sp"

            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
