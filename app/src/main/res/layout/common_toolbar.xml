<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/show_toolbar"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="?attr/colorPrimary"
        app:subtitleTextColor="?android:attr/textColorPrimary">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="微信"
            android:textColor="#000000"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/add_friends"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/jiahao"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:contentDescription="添加好友" />
        <ImageView
            android:id="@+id/main_refresh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/shuaxin"
            app:layout_constraintRight_toLeftOf="@id/add_friends"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:contentDescription="添加好友" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#d5d5d5" />
</LinearLayout>